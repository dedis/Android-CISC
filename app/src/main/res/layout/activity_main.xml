<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_qr_block"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp" >

        <ImageView
            android:id="@+id/main_qr_image"
            android:contentDescription="@string/qr_image_hint"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="50dp"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_text_block"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp" >

    <TextView
        android:id="@+id/main_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title_label"
        android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_button_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="1">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_join_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_link_white"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:scaleType="center"
            app:backgroundTint="@color/colorPrimary"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_refresh_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_refresh_white"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:scaleType="center"
            app:backgroundTint="@color/colorPrimary"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_info_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_add_white"
            android:layout_margin="10dp"
            android:layout_weight="0.3"
            android:scaleType="center"
            app:backgroundTint="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>
