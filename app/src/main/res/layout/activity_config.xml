<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/config_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="10dp"
    android:background="#ffffff">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/config_info_block"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/config_identity_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:text="@string/config_identity_label"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/config_identity_value"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/config_address_block"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/config_address_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:text="@string/config_address_label"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/config_address_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/config_data_block"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/config_data_label"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:text="@string/config_data_label"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/config_data_value"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/config_button_block"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/config_devices_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/change_button"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/config_change_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/devices_button"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/config_fetch_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fetch_button"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>


